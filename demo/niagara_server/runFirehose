#!/usr/bin/perl -w
# $Id: runFirehose,v 1.5 2003/07/03 19:24:57 tufte Exp $
system("rm -rf SYS/*");
system("rm -rf CACHE/*");

$classpath = `cat ../classpath`;
$classpath =~ s/\n/ /g;
$classpath =~ s/NIAGROOT\//\.\.\/\.\.\//g;

$command = "java -ea -server -Xmx192m -classpath " . $classpath . 
           " niagara.firehose.XMLFirehose " . join(" ", @ARGV) ."\n"; 
#print $command;
exec $command;
